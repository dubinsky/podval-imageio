<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
  <global-forwards>
    <forward name="welcome" path="/do/index" />
  </global-forwards>
  <action-mappings>
    <action type="org.podval.album.IndexAction" parameter="path" path="/index">
      <forward name="jsp" path="/index-internal.jsp" />
    </action>
    <action type="org.podval.album.ViewAction" parameter="path" path="/view"/>
  </action-mappings>
</struts-config>
