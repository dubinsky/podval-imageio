<?xml version="1.0" encoding="UTF-8"?>

<meta-metadata>

<directory name="org_podval_imageio_exif_1.0">

  <record tag="256" name="imageWidth" type="U16orU32"/>
  <record tag="257" name="imageHeight" type="U16orU32"/>

  <record tag="258" name="bitsPerSample"> <!-- value 8 8 8 -->
    <field name="bitsPerSampleChannel1"/>
    <field name="bitsPerSampleChannel2"/>
    <field name="bitsPerSampleChannel3"/>
  </record>

  <record tag="259" name="compression">
    <enumeration>
      <item value="1" description="Uncompressed"/>
      <item value="6" description="JPEG compression"/>
    </enumeration>
  </record>

  <record tag="262" name="photometricInterpretation">
    <enumeration>
      <!-- XXXX: <item value="1" description="Monochrome"/>-->
      <item value="2" description="RGB"/>
      <item value="6" description="YCbCr"/>
    </enumeration>
  </record>

  <record tag="270" name="imageDescription" type="string"/>

  <record tag="271" name="make" type="string"/>
  <record tag="272" name="model" type="string"/>

  <record tag="273" name="stripOffsets" type="U16orU32" count="any"/>

  <record tag="274" name="orientation">  <!-- 0th row 0th column; default 1 -->
    <enumeration>
      <item value="1" description="Top left"/>
      <item value="2" description="Top right"/>
      <item value="3" description="Bottom right"/>
      <item value="4" description="Bottom left"/>
      <item value="5" description="Left top"/>
      <item value="6" description="Right top"/>
      <item value="7" description="Right bottom"/>
      <item value="8" description="Left bottom"/>
    </enumeration>
  </record>

  <record tag="277" name="samplesPerPixel" type="U16"/> <!-- value 3 -->

  <record tag="278" name="rowsPerStrip" type="U16orU32"/>
  <record tag="279" name="stripByteCounts" type="U16orU32" count="any"/>

  <record tag="282" name="resolutionXPerUnit" type="rational"/> <!-- default 72 dpi -->
  <record tag="283" name="resolutionYPerUnit" type="rational"/> <!-- default 72 dpi -->

  <record tag="284" name="planarConfiguration"> <!-- default 1 -->
    <enumeration>
      <item value="1" description="Chunky"/>
      <item value="2" description="Planar"/>
    </enumeration>
  </record>

  <!-- XXXX: see also 41488... -->
  <record tag="296" name="resolutionUnit"> <!-- default 2 -->
    <enumeration>
      <!--<item value="1" description="Undefined"/>-->
      <item value="2" description="Inch"/>
      <item value="3" description="Centimeter"/>
    </enumeration>
  </record>


  <!-- Not used; colorspace is used instead.
  <record tag="301" name="transferFunction" count=3*256/>
  -->

  <record tag="305" name="software" type="string"/>  <!-- Missing in G2's .THM file. -->

  <record tag="306" name="dateTime" type="string" count="20"
    conversion="org.podval.imageio.Conversions.parseExifDate"/>

  <record tag="315" name="artist" type="string"/>

  <!-- Not used; colorspace is used instead.
       Tag 318 is named 'whitePoint' in EXIF 2.2 specification.
  <record tag="318" name="whitePointChromaticity" type="rational" count="2"/>
  <record tag="319" name="primaryChromaticities" type="rational" count="6"/>
  -->

  <!-- Tags 513 and 514 are not used for primary image. -->
  <record tag="513" name="jpegInterchangeFormat" type="U32"/> <!-- Offset to JPEG SOI -->
  <record tag="514" name="jpegInterchangeFormatLength" type="U32"/> <!-- Bytes of JPEG data -->

  <!-- Color space transformation matrix coefficients RGB -> YCbCr. -->
  <record tag="529" name="YCbCrCoefficients" type="rational" count="3"/>

  <record tag="530" name="YCbCrSubsampling" type="U16" count="2">
    <field name="YCbCrSubsampling1"/> <!-- value 2 --> <!-- XXXX: skip? -->
    <field name="YCbCrSubsampling">
      <enumeration>
        <item value="1" description="YCbCr4:2:2"/>
        <item value="2" description="YCbCr4:2:0"/>
      </enumeration>
    </field>
  </record>

  <record tag="531" name="YCbCrPositioning"> <!-- default 1 -->
    <enumeration>
      <item value="1" description="Centered"/>
      <item value="2" description="Co-sited"/>
    </enumeration>
  </record>

  <record tag="532" name="referenceBlackWhite" type="rational">
    <!-- Default:
      [0, 255, 0, 255, 0, 255] when photometricInterpretation is RGB
      [0, 255, 0, 128, 0, 128] when photometricInterpretation is YCbCr
    -->
    <field name="referenceBlackChannel1"/>
    <field name="referenceBlackChannel2"/>
    <field name="referenceBlackChannel3"/>
    <field name="referenceWhiteChannel1"/>
    <field name="referenceWhiteChannel2"/>
    <field name="referenceWhiteChannel3"/>
  </record>

  <!-- XXXX:
       When there is a clear distinction between the photographer and editor
       copyrights, these are to be written in the order of photographer followed
       by editor copyright, separated by NULL (in this case, since the statement
       also ends with a NULL, there are two NULL codes).
       When only the photographer copyright is given, it is terminated by one
       NULL code (see example 2). When only the editor copyright is given, the
       photographer copyright part consists of one space followed by a
       terminating NULL code, then the editor copyright is given.
       When the field is left blank, it is treated as unknown.
  -->
  <record tag="33432" name="copyright" type="string"/>

  <directory tag="34665" name="exif" type="U32">
    <directory tag="40965" name="interoperability" type="U32"/>
  </directory>

  <!-- XXXX: I do not did GPS IFD stuff yet. -->
  <directory tag="34853" name="gps" type="U32"/>
</directory>


<!-- XXXX: This has not been checked against EXIF 2.2 specification. -->
<directory name="interoperability">
  <record tag="1" name="interoperabilityIndex" type="string" count="4"/>
  <record tag="2" name="interoperabilityVersion" type="X8-string" count="4"/>
  <record tag="4096" name="relatedImageFileFormat" type="string"/>
  <record tag="4097" name="relatedImageWidth" type="U16orU32"/>
  <record tag="4098" name="relatedImageHeight" type="U16orU32"/>
</directory>

</meta-metadata>
